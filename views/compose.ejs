<%- include("partials/header") -%>
<h1>Compose</h1>

<form action="/compose" method="post">
<div class="mb-3">
    <label for="FormControlInput1" class="form-label">Title</label>
    <input type="text" class="form-control" id="FormControlInput1" name="postTitle">
  </div>
  <div class="mb-3">
    <label for="FormControlTextarea1" class="form-label">Post</label>
    <textarea class="form-control" id="FormControlTextarea1" rows="3" name="postBody"></textarea>
  </div>
  <button type="submit" class="btn btn-primary mt-3" name="publish"
        style="--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem; margin-top: 10px;">
  Publish
</button>
</form>

<%- include("partials/footer") -%>